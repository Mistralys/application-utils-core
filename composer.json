{
  "name" : "mistralys/application-utils-core",
  "description" : "Drop-in utilities for PHP applications.",
  "type" : "library",
  "license" : "MIT",
  "authors" :
  [
    {
      "email" : "s.mordziol@mistralys.eu",
      "name" : "Sebastian Mordziol",
      "role" : "Lead"
    }
  ],
  "autoload" :
  {
    "files" :
    [
      "src/functions.php"
    ],
    "classmap" :
    [
      "src/"
    ]
  },
  "autoload-dev":
  {
    "classmap": [
      "tests/AppUtilsTestClasses"
    ]
  },
  "minimum-stability" : "dev",
  "prefer-stable" : true,
  "require" :
  {
    "geshi/geshi" : ">=1.0",
    "neitanod/forceutf8" : ">=2.0.4",
    "php": ">=8.4",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-curl": "*",
    "ext-ctype": "*",
    "ext-libxml": "*",
    "ext-dom": "*"
  },
  "require-dev" :
  {
    "phpunit/phpunit" : ">=12.4",
    "phpstan/phpstan" : ">=2.1",
    "phpstan/phpstan-phpunit": ">=2.0",
    "ext-gd": "*"
  },
  "suggest" :
  {
    "mistralys/application-localization" : "Required to translate available texts, from date related methods or file size labels for example."
  }
}
